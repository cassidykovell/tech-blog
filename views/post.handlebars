<div class="text-center">
  <h2>{{username}}</h2>
  <p>{{content}}</p>
  <p>Created by {{username}} on {{format_date date_created}}</p>
  <p>
    <button class="btn btn-primary">Comment</button>
  </p>
  
  {{#if comments.length}}
    <div class="comments-section">
      <h3>Comments:</h3>
      <ul>
        {{#each comments as |comment|}}
          <li>{{comment.username}} - {{comment.timestamp}}: {{comment.content}}</li>
        {{/each}}
      </ul>
    </div>
  {{/if}}
</div>
